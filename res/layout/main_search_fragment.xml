<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:id="@+id/main_search_fragment_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <RelativeLayout
            android:id="@+id/main_search_fragment_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true">
        <LinearLayout
                android:id="@+id/main_search_fragment_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/main_search_fragment_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_padding"
                    android:src="@drawable/play"/>
            <ImageView
                    android:id="@+id/main_search_fragment_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_padding"
                    android:src="@drawable/pause"/>
            <ImageView
                    android:id="@+id/main_search_fragment_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_padding"
                    android:src="@drawable/stop"/>
        </LinearLayout>
        <TextView
                android:id="@+id/main_search_fragment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/default_padding"
                android:text="00:00"/>
        <TextView
                android:id="@+id/main_search_fragment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/main_search_fragment_buttons"
                android:layout_toLeftOf="@id/main_search_fragment_time"
                android:lines="1"
                android:ellipsize="end"
                android:text="@string/app_name"/>

        <ProgressBar
                android:id="@+id/main_search_fragment_progress_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_toRightOf="@id/main_search_fragment_buttons"
                android:layout_toLeftOf="@id/main_search_fragment_time"
                android:max="100"
                android:progress="0"
                android:layout_below="@id/main_search_fragment_title"/>
    </RelativeLayout>


    <ListView
            android:id="@+id/main_search_fragment_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_search_fragment_edit_text"
            android:layout_above="@id/main_search_fragment_player"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp">

    </ListView>

    <ProgressBar
            android:id="@+id/main_search_fragment_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/main_search_fragment_edit_text"
            android:layout_above="@id/main_search_fragment_player"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>



</RelativeLayout>